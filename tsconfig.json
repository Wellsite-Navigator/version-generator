{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "outDir": "dist",
    "baseUrl": ".",    
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts", "**/__tests__/**", "**/__mocks__/**"]
}
